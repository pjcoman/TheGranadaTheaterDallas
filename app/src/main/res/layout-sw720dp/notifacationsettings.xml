            android:layout_weight=".5"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1390ff" />

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/checkBoxAcoustic"
